<%-include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach (function(post){ %>
<!--instead of for loop we used a method to add the composed page data or content to home page -->
<h1> <%= post.title %></h1>

<% if (typeof post.content == 'undefined' ) { %>
<p> no content</p>
<% } else { %>
<p> <%=post.content.substring(0,100)+"..." %><a href="/posts/<%=post._id %>">Read More</a></p>
<% } %>

<% }) %>



<%-include("partials/footer"); -%>
